{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "vportal-ui",
  "defaultBase": "master",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/cypress/**/*",
      "!{projectRoot}/**/*.cy.[jt]s?(x)",
      "!{projectRoot}/cypress.config.[jt]s"
    ],
    "sharedGlobals": []
  },
  "release": {
    "projectsRelationship": "independent",
    "version": {
      "noVerify": true,
      "git": {
        "commitMessage": "chore({projectName}): release version {version} [skip-ci]",
        "commit": false,
        "tag": false,
        "push": false,
        "stageChanges": false
      }
    },
    "groups": {
      "__default__": {
        "projects": "shared/libs/*",
        "projectsRelationship": "independent"
      },
      "proxy": {
        "projects": "proxies/*",
        "projectsRelationship": "independent"
      }
    }
  },
  "targetDefaults": {
    "version": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "nx release version --projects={project} --skip-publish"
      }
    },
    "nx-release-publish": {
      "dependsOn": ["build"],
      "options": {
        "packageRoot": "{workspaceRoot}/output/{projectRoot}"
      }
    },
    "@angular-devkit/build-angular:browser": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "@nx/angular:webpack-browser": {
      "inputs": [
        "production",
        "^production",
        {
          "env": "NX_MF_DEV_SERVER_STATIC_REMOTES"
        }
      ],
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "10mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "10mb"
            }
          ],
          "outputHashing": "none",
          "sourceMap": false,
          "buildOptimizer": true,
          "extractLicenses": true,
          "optimization": true,
          "vendorChunk": true,
          "namedChunks": true,
          "serviceWorker": true
        },
        "release": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "10mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "10mb"
            }
          ],
          "outputHashing": "none",
          "sourceMap": false,
          "buildOptimizer": true,
          "extractLicenses": true,
          "optimization": true,
          "vendorChunk": true,
          "namedChunks": true,
          "serviceWorker": true
        },
        "immurelease": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "10mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "10mb"
            }
          ],
          "outputHashing": "none",
          "sourceMap": false,
          "buildOptimizer": true,
          "extractLicenses": true,
          "optimization": true,
          "vendorChunk": true,
          "namedChunks": true,
          "serviceWorker": true
        },
        "development": {
          "sourceMap": true,
          "buildOptimizer": true,
          "extractLicenses": true,
          "optimization": false,
          "vendorChunk": true,
          "namedChunks": true,
          "serviceWorker": true
        },
        "debug": {
          "sourceMap": true,
          "buildOptimizer": true,
          "extractLicenses": true,
          "optimization": false,
          "vendorChunk": true,
          "namedChunks": true,
          "serviceWorker": true
        },
        "qa": {
          "sourceMap": true,
          "buildOptimizer": true,
          "extractLicenses": true,
          "optimization": false,
          "vendorChunk": true,
          "namedChunks": true,
          "serviceWorker": true
        }
      }
    },
    "@nx/webpack:webpack": {
      "inputs": [
        "production",
        "^production",
        {
          "env": "NX_MF_DEV_SERVER_STATIC_REMOTES"
        }
      ]
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "@nx/angular:package": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "server": {
      "cache": true
    }
  },
  "plugins": [
    {
      "plugin": "nx/plugins/package-json"
    }
  ],
  "generators": {
    "@nx/angular:host": {
      "dynamic": true,
      "style": "scss",
      "e2eTestRunner": "none"
    },
    "@nx/angular:application": {
      "e2eTestRunner": "none",
      "linter": "eslint",
      "style": "scss",
      "unitTestRunner": "jest"
    },
    "@nx/angular:remote": {
      "e2eTestRunner": "none",
      "linter": "eslint",
      "style": "scss",
      "unitTestRunner": "jest"
    },
    "@nx/react": {
      "application": {
        "babel": true,
        "style": "scss",
        "linter": "eslint",
        "bundler": "webpack"
      },
      "component": {
        "style": "scss"
      },
      "library": {
        "style": "scss",
        "linter": "eslint"
      }
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "style": "scss"
    },
    "@nx/angular:component": {
      "style": "css"
    }
  }
}
